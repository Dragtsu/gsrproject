<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="TbUnidad">
  
    <resultMap id="UnidadMap" type="com.data.models.TbUnidad">
        <result property="id_vehiculo" column="id_vehiculo" jdbcType="VARCHAR" />
        <result property="sDescripcion" column="sDescripcion" jdbcType="VARCHAR" />        
        <result property="fMantenimiento" column="fMantenimiento" jdbcType="VARCHAR" />
        <result property="fVerificacion" column="fVerificacion" jdbcType="VARCHAR" />
        <result property="fSeguro" column="fSeguro" jdbcType="VARCHAR" />
        <result property="nCostoServicio" column="nCostoServicio"  jdbcType="DOUBLE"/>
    </resultMap>   
    <select id="getAll" parameterType="String" resultMap="UnidadMap">
        SELECT * FROM vehiculo where id_vehiculo like #{id_vehiculo}||'%'
    </select>
    <insert id="insert" parameterType="com.data.models.TbUnidad">
        INSERT INTO vehiculo ( id_vehiculo , sDescripcion, fMantenimiento , fVerificacion, fSeguro , nCostoServicio )
        VALUES (#{id_vehiculo},#{sDescripcion}, #{fMantenimiento}, #{fVerificacion}, #{fSeguro}, #{nCostoServicio});
    </insert>
    <delete id="deleteById" parameterType="String">
        DELETE from vehiculo WHERE id_vehiculo = #{id_vehiculo};
    </delete>   
    <select id="getById" parameterType="String" resultType="com.data.models.TbUnidad"  resultMap="UnidadMap">
        SELECT * FROM vehiculo WHERE id_vehiculo = #{id_vehiculo}
    </select>
    <update id="update" parameterType="com.data.models.TbUnidad">
        UPDATE vehiculo
        SET                      
            sDescripcion=#{sDescripcion},
            fMantenimiento = #{fMantenimiento}, 
            fVerificacion = #{fVerificacion},
            fSeguro = #{fSeguro},
            nCostoServicio = #{nCostoServicio}
        WHERE id_vehiculo = #{id_vehiculo};
    </update>  
  </mapper>