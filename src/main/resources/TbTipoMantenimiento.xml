<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="TbTipoMantenimiento">
  
    <resultMap id="TipoMantenimientoMap" type="com.data.models.TbTipoMantenimiento">
        <result property="id_tipo_mantenimiento" column="id_tipo_mantenimiento" jdbcType="INTEGER" />
        <result property="tipo_mantenimiento" column="tipo_mantenimiento" jdbcType="VARCHAR" />
        <result property="sDescripcion" column="sDescripcion" jdbcType="VARCHAR" />         
    </resultMap>   
    <select id="getAll" parameterType="String" resultMap="TipoMantenimientoMap">
        SELECT * FROM tipo_mantenimiento where id_tipo_mantenimiento like #{id_tipo_mantenimiento}||'%'
    </select>
    <insert id="insert" parameterType="com.data.models.TbTipoMantenimiento">
        INSERT INTO tipo_mantenimiento (  tipo_mantenimiento, sDescripcion )
        VALUES (#{tipo_mantenimiento}, #{sDescripcion});
    </insert>
    <delete id="deleteById" parameterType="Integer">
        DELETE from tipo_mantenimiento WHERE id_tipo_mantenimiento = #{id_tipo_mantenimiento};
    </delete>   
    <select id="getById" parameterType="Integer" resultType="com.data.models.TbTipoMantenimiento"  resultMap="TipoMantenimientoMap">
        SELECT * FROM tipo_mantenimiento WHERE id_tipo_mantenimiento = #{id_tipo_mantenimiento}
    </select>
    <update id="update" parameterType="com.data.models.TbTipoMantenimiento">
        UPDATE tipo_mantenimiento
        SET                            
            tipo_mantenimiento = #{tipo_mantenimiento},
            sDescripcion = #{sDescripcion}
        WHERE id_tipo_mantenimiento = #{id_tipo_mantenimiento};
    </update>  
  </mapper>